<article id="<%= dom_id(tweet) %>" style="border-bottom:1px solid #eee; padding:8px 0;">
  <p><strong>Posted by: <%= tweet.user.username.presence || tweet.user.display_name || "User" %></strong></p>
  <p><%= simple_format(tweet.content) %></p>
  <small>
    Posted at <%= l(tweet.created_at, format: :short) %>
    <% if tweet.updated_at && tweet.updated_at != tweet.created_at %> 
      â€¢ Updated at <%= l(tweet.updated_at, format: :short) %>
    <% end %>
  </small>
  <div>
    <% if tweet.user_id == current_user.id %>
      <%= link_to "Edit", edit_tweet_path(tweet), class: "btn btn-secondary" %>
      | <%= link_to "Delete", tweet, data: { turbo_method: :delete, turbo_confirm: "Delete this tweet?" }, class: "btn btn-danger" %>
    <% end %>
  </div>
</article>
