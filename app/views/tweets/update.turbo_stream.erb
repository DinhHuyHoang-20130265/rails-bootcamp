<% if @tweet.persisted? %>
  <%# Replace the updated tweet %>
  <%= turbo_stream.replace dom_id(@tweet) do %>
    <%= render partial: "tweet", locals: { tweet: @tweet } %>
  <% end %>
<% else %>
  <%# Show validation errors %>
  <%= turbo_stream.replace dom_id(@tweet) do %>
    <%= render partial: "tweet", locals: { tweet: @tweet } %>
  <% end %>
<% end %>
