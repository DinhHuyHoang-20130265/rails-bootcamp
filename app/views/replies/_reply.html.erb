<%= turbo_frame_tag dom_id(reply) do %>
  <div class="d-flex align-items-start gap-2">
    <i class="fa-solid fa-reply text-secondary pt-1" aria-hidden="true"></i>
    <div class="reply card mb-2 flex-grow-1">
      <div class="card-body py-2">
        <div class="d-flex justify-content-between align-items-baseline">
          <strong class="me-2"><i class="fa-solid fa-user"></i><%= reply.user.display_name %>
          </strong>
          <div class="d-flex align-items-center gap-2">
            <small class="text-muted"><%= reply.date_format(reply.created_at) %></small>
            <% if reply.user_id == current_user.id %>
              <div class="dropdown" style="cursor: pointer">
                <i class="fa-solid fa-gear" data-bs-toggle="dropdown" style="cursor: pointer"></i>
                <div class="dropdown-menu dropdown-menu-end">
                  <%= link_to '<i class="fa-solid fa-pencil"></i> Edit'.html_safe,
                              edit_tweet_reply_path(reply.parent, reply),
                              class: "dropdown-item" %>
                  <%= button_to '<i class="fa-solid fa-trash"></i> Delete'.html_safe,
                                tweet_reply_path(reply.parent, reply),
                                method: :delete,
                                class: "dropdown-item",
                                data: { turbo_confirm: "Are you sure?" } %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="mt-1">
          <%= simple_format(reply.content, { class: "mb-0" }) %>
        </div>
      </div>
    </div>
  </div>
<% end %>
