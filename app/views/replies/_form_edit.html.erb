<div class="d-flex align-items-start gap-2">
  <i class="fa-solid fa-reply text-secondary pt-1" aria-hidden="true"></i>
  <div class="reply card mb-2 flex-grow-1">
    <div class="card-body py-2" data-controller="input-handle">
      <%= form_with model: reply, url: tweet_reply_path(tweet, reply) do |f| %>
        <% if reply.errors.any? %>
          <ul>
            <% reply.errors.full_messages.each do |m| %>
              <li><%= m %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="form-floating">
          <%= f.text_area :content,
                          rows: 3,
                          placeholder: "Edit your reply...",
                          required: true,
                          maxlength: 280,
                          class: "form-control",
                          id: "reply_for_#{tweet.id}",
                          data: {
                            action: "input->input-handle#input",
                            input_handle_target: "textarea"
                          } %>
          <%= f.label :content, for: "reply_for_#{tweet.id}" %>
        </div>
        <div class="d-flex flex-row gap-2 justify-content-start align-items-center mt-2">
          <%= f.submit "Update", class: "btn btn-primary btn-sm", data: { input_handle_target: "submit" } %>
          <%= link_to "Cancel",
                      tweet_reply_path(tweet, reply),
                      data: {
                        turbo_frame: dom_id(reply)
                      },
                      class: "btn btn-outline-secondary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
